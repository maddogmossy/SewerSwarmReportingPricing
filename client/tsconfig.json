{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "types": ["node", "react", "react-dom"]
  },
  "include": [".next/types/**/*.ts", "app/**/*", "next-env.d.ts"],
  "exclude": ["node_modules", "client/**", "scripts/**", "test/**"]
}

{
  "compilerOptions": {
    // Tells TypeScript where the root of your project is
    "baseUrl": ".",
    // Path alias: allows you to use `@/` as shortcut for the root
    "paths": {
      "@/*": ["./*"]
    },

    // Basic settings for Next.js
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "extends": "next"
}
